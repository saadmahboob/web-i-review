extends layout
block content
	div.container
		div.jumbotron
			div.page-header
				h1 Login
			if errors
				each error in errors
					div.alert.alert-danger
						span #{error.error}
			form.login-form.form-horizontal(method='post', role='form')
				div.form-group
					label.col-sm-offset-2.col-sm-4 E-mail Address
					div.col-sm-4
						input.form-control(
							placeholder='user@mydomain.com',
							required=true,
							name='email',
							type='email',
							value=email)
				div.form-group
					label.col-sm-offset-2.col-sm-4 Password
					div.col-sm-4
						input.form-control(
							required=true,
							name='password',
							type='password',
							value=password)
				div.form-group
					div.col-sm-offset-6.col-sm-4
						button.login.btn.btn-primary(type='submit', style="float:right") Submit
				div.pull-right
					a(href="/") Return to home page